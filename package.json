{
  "name": "@grail/components",
  "version": "1.1.8",
  "scripts": {
    "build": "NODE_ENV=production yarn build:src && yarn build:flow && babel-node ./scripts/build.js",
    "build:flow": "flow-copy-source src dist",
    "build:src": "kcd-scripts build",
    "build:client": "NODE_ENV=production yarn build:src",
    "start:client": "NODE_ENV=development yarn build:src --watch",
    "cover": "open coverage/lcov-report/index.html",
    "flow": "flow",
    "lint": "kcd-scripts lint --ext .js --ext .jsx",
    "lint-fix": "yarn lint --fix",
    "format": "prettier --write \"src/**/*.{js,jsx}\" \"*.js\" \"scripts/**/*.js\" && yarn lint-fix",
    "preinstall": "node -e 'if(!/yarn\\.js$/.test(process.env.npm_execpath))throw new Error(\"Use yarn install\")'",
    "precommit": "kcd-scripts pre-commit",
    "start": "yarn styleguide",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "kcd-scripts test --watch",
    "test:staged": "kcd-scripts test --coverage && echo --findRelatedTests does not work properly with coverage",
    "test-all": "kcd-scripts test --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "@date-io/core": "^1.3.9",
    "@date-io/moment": "^1.3.9",
    "@material-ui/pickers": "^3.2.2",
    "classnames": "^2.2.6",
    "dom-helpers": "^3.4.0",
    "downshift": "^3.2.12",
    "file-saver": "^2.0.2",
    "keycode": "^2.2.0",
    "lodash": "^4.17.15",
    "material-ui-pickers": "^2.2.4",
    "moment": "^2.24.0",
    "path-to-regexp": "^3.0.0",
    "react-select": "^3.0.4",
    "react-virtualized": "^9.21.1",
    "sass": "^1.22.9"
  },
  "devDependencies": {
    "@babel/node": "^7.5.5",
    "@grail/eslint-config-grail": ">=0.0.0",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^9.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "flow-bin": "^0.105.1",
    "flow-copy-source": "^2.0.7",
    "fs-extra": "^8.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-mock-console": "^1.0.0",
    "kcd-scripts": "^1.6.0",
    "moment-timezone": "^0.5.26",
    "prettier": "^1.18.2",
    "react-jss": "^8.6.1",
    "react-router-dom": "^5.0.1",
    "react-styleguidist": "^9.1.14",
    "sass-loader": "^7.2.0",
    "style-loader": "^1.0.0",
    "url-loader": "^2.1.0",
    "webpack": "4.39.1"
  },
  "peerDependencies": {
    "@grail/lib": ">=1.1.5",
    "@material-ui/core": "^4.0.0",
    "@material-ui/icons": "^4.0.0",
    "@material-ui/styles": "^4.0.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-router-dom": "^4.3.1 || ^5.0.0"
  },
  "lint-staged": {
    "linters": {
      "*.+(js|jsx|ts|tsx)": [
        "prettier --write",
        "kcd-scripts lint --rule flowtype/require-valid-file-annotation:2 --rule react-hooks/exhaustive-deps:0 --fix",
        "git add"
      ],
      "*.+(json|yml|yaml|css|less|scss|md|graphql|mdx)": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "main": "dist/index.js",
  "private": true,
  "sideEffects": false
}
