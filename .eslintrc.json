{
  "env": {
    "browser": true,
    "cypress/globals": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": ["eslint-config-airbnb", "plugin:flowtype/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["cypress", "flowtype", "import", "react"],
  "rules": {
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }
    ],
    "curly": "error",
    "default-case": "error",
    "dot-notation": "error",
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "flowtype/require-valid-file-annotation": [
      0,
      "always",
      {
        "annotationStyle": "line"
      }
    ],
    "guard-for-in": "error",
    "indent": [
      "error",
      "tab",
      {
        "SwitchCase": 1,
        "ignoredNodes": [
          "JSXElement",
          "JSXElement > *",
          "JSXAttribute",
          "JSXIdentifier",
          "JSXNamespacedName",
          "JSXMemberExpression",
          "JSXSpreadAttribute",
          "JSXExpressionContainer",
          "JSXOpeningElement",
          "JSXClosingElement",
          "JSXText",
          "JSXEmptyExpression",
          "JSXSpreadChild"
        ]
      }
    ],
    "import/newline-after-import": ["error", { "count": 1 }],
    "import/order": "error",
    "import/prefer-default-export": 0,
    "linebreak-style": ["error", "unix"],
    "lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }],
    "max-len": ["error", 150, 2],
    "no-console": ["error", { "allow": ["warn", "error", "debug", "info"] }],
    "no-alert": "error",
    "no-caller": "error",
    "no-case-declarations": "error",
    "no-debugger": "error",
    "no-dupe-args": "error",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error",
    "no-duplicate-imports": "error",
    "no-else-return": "error",
    "no-empty": "error",
    "no-empty-pattern": "error",
    "no-extra-boolean-cast": "error",
    "no-fallthrough": "error",
    "no-func-assign": "error",
    "no-invalid-regexp": "error",
    "no-irregular-whitespace": "error",
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 0, "maxEOF": 1 }],
    "no-octal": "error",
    "no-octal-escape": "error",
    "no-param-reassign": 0,
    "no-redeclare": "error",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "lodash",
            "message": "Please import lodash functions directly, eg: import isEmpty from \"lodash/isEmpty\"."
          },
          {
            "name": "@material-ui/core",
            "message": "Please import material-ui components directly, eg: import Card from \"@material-ui/core/Card\"."
          }
        ],
        "patterns": ["@grail/lib/src/*", "@grail/components/src/*"]
      }
    ],
    "no-return-assign": 0,
    "no-script-url": "error",
    "no-self-assign": "error",
    "no-self-compare": "error",
    "no-sequences": "error",
    "no-shadow": 0,
    "no-tabs": 0,
    "no-template-curly-in-string": "error",
    "no-trailing-spaces": 2,
    "no-unexpected-multiline": "error",
    "no-unreachable": "error",
    "no-unsafe-finally": "error",
    "no-unsafe-negation": "error",
    "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }],
    "no-unused-labels": "error",
    "no-unused-vars": [2, { "varsIgnorePattern": "^__" }],
    "no-useless-call": "error",
    "no-useless-escape": "error",
    "no-useless-return": "error",
    "no-with": "error",
    "no-var": "error",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "object-curly-spacing": ["error", "always"],
    "prefer-const": "error",
    "prefer-promise-reject-errors": "error",
    "prefer-template": "error",
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "jsx-quotes": ["error", "prefer-double"],
    "react/display-name": 0,
    "react/jsx-closing-tag-location": 2,
    "react/jsx-equals-spacing": 2,
    "react/jsx-filename-extension": [2, { "extensions": [".spec.js", ".jsx"] }],
    "react/jsx-first-prop-new-line": [1, "multiline-multiprop"],
    "react/jsx-indent": ["error", "tab"],
    "react/jsx-indent-props": ["error", "tab"],
    "react/jsx-max-props-per-line": [1, { "maximum": 1, "when": "always" }],
    "react/jsx-no-bind": [0],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/prop-types": 0,
    "semi": ["error", "always"],
    "space-before-blocks": 2,
    "strict": 0,
    "use-isnan": "error",
    "valid-typeof": "error",
    "wrap-iife": "error",
    "yoda": "error",

    "import/no-unresolved": 0,
    "import/extensions": 0,
    "no-underscore-dangle": 0,
    "function-paren-newline": 0,
    "no-return-await": 0,
    "prefer-destructuring": 0,
    "react/destructuring-assignment": 0,
    "react/no-array-index-key": 0,
    "react/prefer-stateless-function": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/require-default-props": 0,
    "react/sort-comp": 0,
    "react/no-this-in-sfc": 0,
    "react/no-unused-prop-types": 0,
    "no-restricted-syntax": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "jsx-a11y/interactive-supports-focus": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/label-has-for": 0,
    "no-mixed-operators": 0,
    "radix": 0,
    "global-require": 0,
    "import/named": 0,
    "array-callback-return": 0,
    "arrow-body-style": 0,
    "no-restricted-globals": 0,

    "no-use-before-define": 0,
    "consistent-return": 0,
    "arrow-parens": 0,
    "implicit-arrow-linebreak": 0,
    "operator-linebreak": 0
  }
}
